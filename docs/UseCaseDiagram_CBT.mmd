    subgraph System["CBT Exam System"]
        %% Admin Use Cases
        UC1["Manage Exams<br/>(Create, Read, Update, Delete)"]
        UC2["Manage Questions<br/>(CRUD & Import CSV)"]
        UC3["View Reports<br/>(Analytics & Statistics)"]
        UC4["Manage Users<br/>(View Peserta Data)"]
        UC5["Monitor Exam Results<br/>(Track Performance)"]
        UC6["Configure Exam Settings<br/>(Duration, Passing Score)"]
        UC7["Export Data<br/>(CSV Reports)"]
        
        %% Peserta Use Cases
        UC8["Register Account"]
        UC9["Login to System"]
        UC10["View Available Exams"]
        UC11["Take Exam<br/>(Answer Questions)"]
        UC12["Submit Exam"]
        UC13["View Exam Results"]
        UC14["View Result History"]
        
        %% System Use Cases (Auto)
        UC15["Auto-Save Answers"]
        UC16["Auto-Submit on Timeout"]
        UC17["Calculate Score"]
        UC18["Shuffle Questions"]
